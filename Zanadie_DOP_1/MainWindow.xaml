<Window x:Class="Zanadie_DOP_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zanadie_DOP_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="N:" FontSize="30"  VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Text="K:" FontSize="30" Grid.Row="1"  VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox Grid.Column="1" Grid.ColumnSpan="2" x:Name="N"/>
        <TextBox Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" x:Name="K"/>
        <Button Grid.Row="2" Grid.ColumnSpan="3" Content="OK" FontSize="30" Click="Button_Click"/>
        <TextBox Grid.Row="3" Grid.ColumnSpan="3" x:Name="OTV"/>
    </Grid>
</Window>
